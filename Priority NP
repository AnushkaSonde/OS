#include <stdio.h>

struct Process {
    int pid, at, bt, priority, ct, tat, wt, done;
};

int main() {
    int n, time = 0, completed = 0, i;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];

    for(i=0;i<n;i++){
        p[i].pid=i+1;
        printf("Enter AT, BT, Priority of P%d: ", p[i].pid);
        scanf("%d %d %d",&p[i].at,&p[i].bt,&p[i].priority);
        p[i].done = 0;
    }

    while(completed < n) {
        int idx = -1, min = 999;

        for(i=0;i<n;i++)
            if(!p[i].done && p[i].at <= time && p[i].priority < min) {
                min = p[i].priority;
                idx = i;
            }

        if(idx == -1) { time++; continue; }

        time += p[idx].bt;
        p[idx].ct = time;
        p[idx].done = 1;
        completed++;
    }

    for(i=0;i<n;i++){
        p[i].tat = p[i].ct - p[i].at;
        p[i].wt = p[i].tat - p[i].bt;
    }

    printf("\nPID\tAT\tBT\tPri\tCT\tTAT\tWT\n");
    for(i=0;i<n;i++)
        printf("%d\t%d\t%d\t%d\t%d\t%d\t%d\n",
               p[i].pid,p[i].at,p[i].bt,p[i].priority,
               p[i].ct,p[i].tat,p[i].wt);

    return 0;
}
