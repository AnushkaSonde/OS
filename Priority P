#include <stdio.h>

struct Process {
    int pid, at, bt, priority, remaining, ct, tat, wt;
};

int main() {
    int n, time = 0, completed = 0, i;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];

    for(i=0;i<n;i++){
        p[i].pid=i+1;
        printf("Enter AT, BT, Priority of P%d: ", p[i].pid);
        scanf("%d %d %d",&p[i].at,&p[i].bt,&p[i].priority);
        p[i].remaining = p[i].bt;
    }

    while(completed < n) {
        int idx = -1, min = 999;

        for(i=0;i<n;i++)
            if(p[i].at <= time && p[i].remaining > 0 && p[i].priority < min) {
                min = p[i].priority;
                idx = i;
            }

        if(idx == -1) { time++; continue; }

        p[idx].remaining--;
        time++;

        if(p[idx].remaining == 0) {
            p[idx].ct = time;
            completed++;
        }
    }

    for(i=0;i<n;i++){
        p[i].tat = p[i].ct - p[i].at;
        p[i].wt = p[i].tat - p[i].bt;
    }

    printf("\nPID\tAT\tBT\tPri\tCT\tTAT\tWT\n");
    for(i=0;i<n;i++)
        printf("%d\t%d\t%d\t%d\t%d\t%d\t%d\n",
               p[i].pid,p[i].at,p[i].bt,p[i].priority,
               p[i].ct,p[i].tat,p[i].wt);

    return 0;
}
