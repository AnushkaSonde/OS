#include <stdio.h>

struct Process {
    int pid, at, bt, remaining, ct, tat, wt;
};

int main() {
    int n, quantum, time = 0, completed = 0, i;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];

    for(i=0;i<n;i++){
        p[i].pid = i + 1;
        printf("Enter AT & BT of P%d: ", p[i].pid);
        scanf("%d %d",&p[i].at,&p[i].bt);
        p[i].remaining = p[i].bt;
    }

    printf("Enter time quantum: ");
    scanf("%d", &quantum);

    while(completed < n) {
        for(i=0;i<n;i++) {
            if(p[i].remaining > 0 && p[i].at <= time) {
                int exec = (p[i].remaining >= quantum) ? quantum : p[i].remaining;
                p[i].remaining -= exec;
                time += exec;
                if(p[i].remaining == 0) {
                    p[i].ct = time;
                    completed++;
                }
            }
        }
    }

    for(i=0;i<n;i++){
        p[i].tat = p[i].ct - p[i].at;
        p[i].wt = p[i].tat - p[i].bt;
    }

    printf("\nPID\tAT\tBT\tCT\tTAT\tWT\n");
    for(i=0;i<n;i++)
        printf("%d\t%d\t%d\t%d\t%d\t%d\n",
               p[i].pid,p[i].at,p[i].bt,
               p[i].ct,p[i].tat,p[i].wt);

    return 0;
}
