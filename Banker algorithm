#include <stdio.h>

int main() {
    int n, m;  // n = number of processes, m = number of resources
    int i, j, k;

    // Input values
    printf("Enter number of processes: ");
    scanf("%d", &n);
    printf("Enter number of resources: ");
    scanf("%d", &m);

    int alloc[n][m], max[n][m], avail[m];
    int need[n][m];
    int finish[n];
    int safeSeq[n];

    // Taking allocation matrix input
    printf("\nEnter Allocation Matrix:\n");
    for(i = 0; i < n; i++)
        for(j = 0; j < m; j++)
            scanf("%d", &alloc[i][j]);

    // Taking maximum requirement matrix input
    printf("\nEnter Max Matrix:\n");
    for(i = 0; i < n; i++)
        for(j = 0; j < m; j++)
            scanf("%d", &max[i][j]);

    // Available resources input
    printf("\nEnter Available Resources:\n");
    for(i = 0; i < m; i++)
        scanf("%d", &avail[i]);

    // Step 1: Calculate Need Matrix = Max - Allocation
    for(i = 0; i < n; i++)
        for(j = 0; j < m; j++)
            need[i][j] = max[i][j] - alloc[i][j];

    // Mark all processes as unfinished initially
    for(i = 0; i < n; i++)
        finish[i] = 0;

    int count = 0;

    // Step 2: Find safe sequence
    while(count < n) {
        int found = 0;

        for(i = 0; i < n; i++) {
            if(finish[i] == 0) {
                for(j = 0; j < m; j++)
                    if(need[i][j] > avail[j])
                        break;

                if(j == m) {
                    // Resources can be allocated
                    for(k = 0; k < m; k++)
                        avail[k] += alloc[i][k];

                    safeSeq[count++] = i;
                    finish[i] = 1;
                    found = 1;
                }
            }
        }

        if(found == 0) {
            printf("\nSystem is NOT in a Safe State (Deadlock Possible)\n");
            return 0;
        }
    }

    // If we reach here => Safe state exists
    printf("\nSystem is in a SAFE STATE\nSafe Sequence: ");
    for(i = 0; i < n; i++)
        printf("P%d ", safeSeq[i]);

    printf("\n");
    return 0;
}


